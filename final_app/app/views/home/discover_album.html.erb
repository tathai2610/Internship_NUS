
<%= stylesheet_link_tag "style" %>
<%= javascript_pack_tag "script" %>
<link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
<script src="https://kit.fontawesome.com/3dc3c39fce.js" crossorigin="anonymous"></script>

    <nav class="navbar navbar-expand-md navbar-dark avatar px-5">
      <a class="navbar-brand font-weight-bold pl-lg-5" href="#">Fotobook</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse " id="navbarSupportedContent">
            <form class="form-inline mt-2 my-lg-0 w-100 col-lg-5 ">
              <input class="form-control my-lg-0 w-100" type="search" placeholder="Search Photo / Album" aria-label="Search">
            </form>

            <ul class="navbar-nav col-lg-auto text-center offset-lg-4">
              <li class="nav-item active d-none d-lg-block">
                <button type="button" class="nav-link btn btn-light font-weight-bold rounded-circle text-color">TT</button>
                
              </li>
              <li class="nav-item active mr-lg-5">
                <a class="nav-link" href="#">Thai Tran</a>
              </li>
              <li class="nav-item active ml-lg-5">
                <a class="nav-link" href="#">Logout</a>
              </li>
            </ul>
      </div>
    </nav>
    <div class="container-fluid h-100">
        <div class="row page h-100">
            <div class="col-lg-2 btn-group-vertical ">

                <button type="button" class="btn page text-gray py-0">Feeds</button>
                <button type="button" class="btn page text-color">Discover</button>


            </div>
            <div class="col-lg-8 p-3 h-100">
              <div class="col bg-white h-100">
                <div class="row justify-content-center">
                  <div class="row m-3 btn-group">
                    <button class="btn rounded-left border text-color" id="photo-tab">PHOTO</button>
                    <button class="btn rounded-right border avatar">ALBUM</button>
                  </div>
                </div>
                <div class="row">
                  <% if @albums %>
                   <% @albums.each do |album| %>
                   <div class="col-lg-6 col-sm-12 p-3 d-lg-inline-flex" >
                    <div class="col-lg-6 col-sm-12 box-shadow position-relative p-4 text-center page border-right-0">
                     <img src="https://www.islandair.com/wp-content/uploads/2018/07/ellie-adams-247024-unsplash.jpg" class="rotate5 " data-toggle="modal" data-target="#modal-album" title="<%=album.title%>" desc="<%=album.description%>">
                     <img src="https://www.islandair.com/wp-content/uploads/2018/07/ellie-adams-247024-unsplash.jpg" class="rotate10 " data-toggle="modal" data-target="#modal-album" title="<%=album.title%>" desc="<%=album.description%>">
                     <img src="https://www.islandair.com/wp-content/uploads/2018/07/ellie-adams-247024-unsplash.jpg" class="norotate" data-toggle="modal" data-target="#modal-album" title="<%=album.title%>" desc="<%=album.description%>">

                    </div>
                    <div class="col-lg-6 p-2 col-sm-12 page d-block box-shadow position-relative border-left-0">
                      <div class="container h-100">
                        <div class="d-flex align-items-center mb-2">
                          <img src="https://www.pngkey.com/png/full/230-2301779_best-classified-apps-default-user-profile.png" class="rounded-circle" style="width:30px;height:30px;" alt="" />
                          <span class="font-weight-bold text-color ml-2"><%= "#{album.user.lastname} #{album.user.firstname}" %></span>
                          <button type="button" class="rounded-pill followed btn btm-sm font-size-sm p-1 ml-auto" name="follow">Following</button>
                        </div>

                        <span><b><%=album.title%></b></span>
                        <p class=" font-size"><%=album.description%></p>
                        <div>
                          <span class="blue-heart"><i class="fas fa-heart"></i></span>
                          <span><small><%= album.likes.size %> </small></span>
                          <span class="float-right"><small class="text-secondary "><%= album.created_at.strftime("%I:%M %p %-d/%-m/%Y") %></small></span>
                        </div>
                      </div>
                    </div>
                  </div>
                  <% end %>
                <% end %>

                </div>
              </div>
            </div>
            <div class="col-lg-2"></div>
        </div>
    </div>

    <div class="modal" id="modal-album" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <p class="modal-title font-weight-bold" id="modal-album-title"></p>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div id="albumDis" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img class="d-block w-100" src="https://www.islandair.com/wp-content/uploads/2018/07/ellie-adams-247024-unsplash.jpg" alt="Photo in album">
                </div>
                <div class="carousel-item ">
                  <img class="d-block w-100" src="https://images.unsplash.com/photo-1596320346599-990f6ec0f778?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=634&q=80" alt="Photo in album">
                </div>
                <div class="carousel-item ">
                  <img class="d-block w-100" src="https://images.unsplash.com/photo-1595455661762-31c2975417df?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" alt="Photo in album">
                </div>
              </div>
              <a class="carousel-control-prev" href="#albumDis" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#albumDis" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>

              <p id="modal-album-description" ></p>
            </div>
          </div>
        </div>
      </div>
    </div>
